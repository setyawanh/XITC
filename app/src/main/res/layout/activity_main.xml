<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/title_main"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/tv_header"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btn_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Counter"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:onClick="goToCounter"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/md_green_500"
            android:textColor="@color/md_white_1000"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_counter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:onClick="goToLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/md_blue_500"
            android:textColor="@color/md_white_1000"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/btn_lifecycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifecycle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:onClick="goToLifecycle"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/md_red_500"
            android:textColor="@color/md_white_1000"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>