<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CountActivity">
    <TextView
            android:id="@+id/txt_count"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/md_green_500"
            android:textSize="100sp"
            android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
                android:id="@+id/btn_reset"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/md_red_500"
                android:textColor="@color/md_white_1000"
                android:drawableLeft="@drawable/ic_reset"
                android:onClick="resetCount"
                android:text="@string/txt_reset"/>
        <Button
                android:id="@+id/btn_count"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/md_green_500"
                android:textColor="@color/md_white_1000"
                android:drawableLeft="@drawable/ic_add"
                android:onClick="addCount"
                android:text="@string/txt_count"/>
    </LinearLayout>
</LinearLayout>